<h1>Friend List</h1>

<table class="table table-primary table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Facebook</th>
      <th>Show Friends</th>
      <th>Destroy Friends</th>
    </tr>
  </thead>
  <tbody class="table-dark">
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.facebook %></td>
        <td><%= link_to "Show", friend, class: "btn btn-outline-info" %></td>
        <td><%= link_to "Destroy", friend, method: :delete, class: "btn btn-outline-danger", data: { confirm: "Are you sure you want to delete this friend?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class: "btn btn-primary" %>
